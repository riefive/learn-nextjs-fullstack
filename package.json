{
    "name": "learn-nextjs-fullstack",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --check --ignore-path .gitignore .",
        "format:fix": "prettier --write --ignore-path .gitignore .",
        "format:lint": "npm run format:fix && npm run lint",
        "prisma:generate": "npx prisma generate --schema ./src/database/schema.prisma",
        "prisma:migrate": "npx prisma migrate dev --name init --schema=./.prisma/client/schema.prisma",
        "prisma:seed": "npx ts-node --compiler-options {\\\"module\\\":\\\"commonjs\\\"} ./src/database/seeds/index.ts",
        "prisma:watch": "npx prisma studio"
    },
    "dependencies": {
        "@prisma/client": "^5.6.0",
        "bcrypt": "^5.1.1",
        "next": "14.0.3",
        "next-auth": "^4.24.5",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "eslint": "^8",
        "eslint-config-next": "14.0.3",
        "eslint-config-prettier": "^9.0.0",
        "postcss": "^8",
        "prettier": "^3.1.0",
        "prisma": "^5.6.0",
        "tailwindcss": "^3.3.0",
        "ts-node": "^10.9.1",
        "typescript": "^5"
    }
}
